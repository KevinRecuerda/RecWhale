{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "DOM",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["dist/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "strict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}

