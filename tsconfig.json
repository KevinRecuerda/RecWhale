{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "strict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
    //    "paths": {
    //      "recwhale-ts": ["src/recwhale-ts/src"]
    //    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}

